<div class="jumbotron text-center">
    <h1>All Events</h1>
</div>



<table class="table table-bordered table-hover table-striped event-list">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
        <%  for(var event of events) { %>
        <tr>
            <td><%= event.name %></td>
            <td><%= event.description %></td>
            <td>
                <a href="/events/<%= event._id %>" class="btn btn-sm btn-success pull-left">View</a>
                <a href="/events/<%= event._id %>/edit" class="btn btn-sm btn-primary pull-left">Edit</a>

                <form class="pull-left" action="/events/<%= event._id %>/delete" method="post">
                    <button type="submit" onclick="return confirm('Are you sure you want to commit delete and go back?')" class="btn btn-sm btn-danger">DELETE</button>
                </form>

            </td>
        </tr>
        <% } %>


    </tbody>
</table>